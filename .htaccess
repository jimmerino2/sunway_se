RewriteEngine On
RewriteBase /software_engineering/

# --------------------------------------------------------
# Backend
# --------------------------------------------------------
RewriteRule ^backend/?$ backend/public/index.php [L]
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^backend/?(.*)$ backend/public/index.php [L]

# --------------------------------------------------------
# Frontend
# --------------------------------------------------------
# 1) If the request is for a real directory…
RewriteCond %{REQUEST_FILENAME} -d
# 2) …and neither index.php nor index.html exists there…
RewriteCond %{REQUEST_FILENAME}/index.php !-f
RewriteCond %{REQUEST_FILENAME}/index.html !-f
# 2) …then redirect (302) to your projects dashboard:
RewriteRule ^.*$ /software_engineering/frontend/auth/login.php [L,R=302]